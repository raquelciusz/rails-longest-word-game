<h1>New Game</h1>

<% @letters.each do |letter| %>
<p class="letras"><%= letter %></p>
<% end %>

<form action="/score" method="post" data-turbo="false">
  <label for="">What is the longest word you can find?</label><br>
  <input type="text" name="word" value="<%= params[:word] %>">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
